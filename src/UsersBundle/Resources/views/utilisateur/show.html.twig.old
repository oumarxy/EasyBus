{% extends 'base.html.twig' %}

{% block body %}

    <div class="col-sm-12">
        <div class="page animsition">
            <h4>Les utilisateurs </h4>
            <div class="panel">
                <div class="panel-body container">

                    <div class="col-sm-6">
                        <table class="table table-bordered">
                            <tbody>
                                {% if utilisateur.distributeur %}
                                    <tr>
                                        <th>Distributeur</th>
                                        <td>{{ utilisateur.distributeur.nomDis }}</td>
                                    </tr>
                                {% endif %}
                                <tr>
                                    <th>Login</th>
                                    <td>{{ utilisateur.username }}</td>
                                </tr>
                                <tr>
                                    <th>Nom</th>
                                    <td>{{ utilisateur.nom }}</td>
                                </tr>
                                <tr>
                                    <th>Prenoms</th>
                                    <td>{{ utilisateur.prenoms }}</td>
                                </tr>
                                <tr>
                                    <th>Habitation</th>
                                    <td>{{ utilisateur.habitation }}</td>
                                </tr>
                                <tr>
                                    <th>Tel1</th>
                                    <td>{{ utilisateur.tel1 }}</td>
                                </tr>
                                <tr>
                                    <th>Tel2</th>
                                    <td>{{ utilisateur.tel2 }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ utilisateur.email }}</td>
                                </tr>
                                <tr>
                                    <th>Initial</th>
                                    <td>{{ utilisateur.initial }}</td>
                                </tr>
                                <tr>
                                    <th>Etat</th>
                                    <td>{% if utilisateur.enabled == 1%} Active{%else%} d√©sactive{% endif %}</td>

                                </tr>
                            </tbody>
                        </table>
                    </div>

                    {# recherche role distri #}
                    {%set test = null %}
                    {% for role in utilisateur.roles %}
                        {% if role == 'ROLE_DISTRI' %}
                            {% set test = 'testok'%}
                        {% endif %}
                    {% endfor %}

                    {% if test != 'testok' %}
                        <div class="col-sm-6">
                            <form method="post" action="{{ path('utilisateur_show', { 'id': utilisateur.id }) }}">
                                <table class="table table-hover table-bordered">
                                    <thead>
                                        <tr >
                                            <th colspan="2">AFFECTER UN PRIVILEGE</th>
                                                {% set choix = 'aucun' %}
                                        </tr>
                                    </thead>
                                    {#% for role in utilisateur.roles %}{% if role != 'ROLE_USER' %} {%set choix = role %}{% endif %} {% endfor %#}


                                    <tbody>

                                        <tr>
                                            <th>Role Admin GPP</th>
                                            <td>
                                                <input type="radio" 
                                                       {% for role in utilisateur.roles %}
                                                           {% if role == 'ROLE_ADMIN_GPP' %} checked {% endif %}
                                                       {% endfor %}value="ROLE_ADMIN_GPP" class="myicheck" id="choixgpp" name="choixrole" /></td>
                                        </tr>
                                        <tr>
                                            <th>Role Superviseur</th> 
                                            <td><input type="radio" 
                                                       {% for role in utilisateur.roles %}
                                                           {% if role == 'ROLE_SUPERVISEUR' %} checked  {% endif %}
                                                       {% endfor %} value="ROLE_SUPERVISEUR" class="myicheck" id="choixsuperv" name="choixrole" /></td>

                                        </tr>
                                        <tr>
                                            <th>Role Caisse</th>
                                            <td><input type="radio"
                                                       {% for role in utilisateur.roles %}
                                                           {% if role == 'ROLE_CAISSE' %}checked  {% endif %}
                                                       {% endfor %} value="ROLE_CAISSE"  class="myicheck" id="choixcaiss" name="choixrole" /></td>
                                        </tr>
                                         {% if is_granted('ROLE_FERMER') %}

                                        <tr>
                                            <th>Role Encaissement</th>
                                            <td><input type="radio" 
                                                       {% for role in utilisateur.roles %}
                                                           {% if role == 'ROLE_ENCAISSEMENT' %} checked  {% endif %}
                                                       {% endfor %} value="ROLE_ENCAISSEMENT" class="myicheck" id="choixencaiss" name="choixrole" /></td>
                                        </tr>
                                        <tr>
                                            <th>Role Decaissement</th>
                                            <td><input type="radio" 
                                                       {% for role in utilisateur.roles %}
                                                           {% if role =='ROLE_DECAISSEMENT' %} checked  {% endif %}
                                                       {% endfor %} class="myicheck" id="choixdecaiss" name="choixrole" /></td>
                                        </tr>
                                        <tr>
                                            <th>Role FACTURE</th>
                                            <td><input type="radio" 
                                                       {% for role in utilisateur.roles %}
                                                           {% if role == 'ROLE_FACTURE' %}value="ROLE_ENCAISSEMENT" checked  {% endif %}
                                                       {% endfor %} value="ROLE_DECAISSEMENT" class="myicheck" id="choixfact" name="choixrole" /></td>
                                        </tr>
                                        {% endif %}
                                        <tr>
                                            <th>Aucun</th>
                                            <td><input type="radio" class="myicheck" id="choix" name="choixrole" /></td>
                                        </tr>

                                    </tbody> 
                                </table>

                                <button type="submit" class="btn btn-success">Attribuer un role</button>
                            </form>
                        </div>
                    {% endif %}
                </div>

                <div class="panel-footer container">
                    <a href="{{ path('utilisateur_index') }}" class="btn btn-primary">Liste des utilisateurs</a>
                    <a href="{{ path('utilisateur_edit', { 'id': utilisateur.id }) }}" class="btn btn-danger">Modifier</a>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
