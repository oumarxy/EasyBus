{% extends 'UsersBundle::layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
    {% block fos_user_content %}
                
                <div class="page-title" style="margin-top: 10px !important;margin-bottom: 20px !important;">
                    <h1>Login</h1>
                </div><!-- /.page-title -->

                <form action="{{ path("fos_user_security_check") }}" method="post" autocomplete="off" style="margin-top: 0px;"> 
                    
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <br/>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                    <div class="form-group form-material floating">
                        <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" placeholder="Nom d'Utilisateur" />
                    </div>

                    <div class="form-group form-material floating">
                        <input type="password" id="password" class="form-control" name="_password" required="required" placeholder="Mot de Passe"/>
                    </div>
                    <button type="submit" id="_submit" name="_submit" class="btn btn-primary btn-block">{{ 'security.login.submit'|trans }}</button>
                    <br/>
                    <div class="form-group clearfix" style="margin-top: 10px !important;">
                      
                            <input type="checkbox"  id="remember_me" name="_remember_me" value="on" />
                            <label class="label_login"   for="remember_me">{{ 'security.login.remember_me'|trans }}</label><br/><br/>

                    </div>


                </form>
    {% endblock fos_user_content %}
