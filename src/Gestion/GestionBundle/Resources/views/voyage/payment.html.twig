{% extends 'base_visiteur.html.twig' %}

{#% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-lg-3">                    
                <div class="sidebar">
                    <div class="widget">
                        <h2 class="widgettitle">Détails du voyage</h2>

                        <ul class="menu">
                            <li>
                                <a href="#">VOTRE VOYAGE: <br />
                                    {% if voyage %}
                                        <strong style="font-size: 14px;">
                                            {{ voyage.lieuDepart|upper  }}
                                            ▶ 
                                            {{ voyage.lieuArrivee|upper  }} 
                                        </strong>
                                        <p> Gare de Départ {{ voyage.gare|capitalize  }} </p>
                                    {% endif %}
                                </a>
                            </li>
                            <li>
                                <a href="#">Date de départ: <br />
                                    <strong style="font-size: 14px;">
                                        {% if voyage %}                                            
                                            {% if voyage.dateVoyage %}{{ voyage.dateVoyage|date('d/m/Y') }}{% endif %}
                                            à
                                            {% if voyage.heureDepart %}{{ voyage.heureDepart|date('H:i') }}{% endif %}
                                        {% endif %}
                                    </strong>
                                </a>
                            </li>
                            <li>
                                <a href="#">Nombre de places & montant: <br />
                                    {% if voyage %}
                                        <strong style="font-size: 14px;">
                                            Nombre de place: {{ nbreTicket  }} <br />
                                            Prix unitaire: {{ voyage.prixVoyage|number_format  }} 
                                        </strong>
                                    {% endif %}
                                </a>
                            </li>
                        </ul><!-- /.menu -->
                    </div><!-- /.wifget -->

                </div><!-- /.sidebar -->
            </div><!-- /.col-* -->

            <div class="col-sm-8 col-lg-9">
                <div class="content">
                    <div class="page-title">
                        <h5>Procédez au paiement sécurisé maintenant. <b  style="font-size: 18px; color: #ff8c00;">Montant de : {{ (nbreTicket * voyage.prixVoyage)|number_format }} F CFA</b></h5>
                    </div><!-- /.page-title -->

                    <div class="posts">
                        <div class="post">
                            <div class="post-meta clearfix">
                                <div style="font-size: 18px;">

                                    <!-- Nav tabs -->
                                    <ul class="nav nav-tabs" role="tablist">
                                        <li role="presentation" class="active"><a href="#orange" aria-controls="orange" role="tab" data-toggle="tab"> 
                                                <img width="35" height="35" src="{{asset('assets/img/orange.png') }}" alt="orange"/> 
                                                Orange Money
                                            </a>
                                        </li>
                                        <li role="presentation"><a href="#mtn" aria-controls="mtn" role="tab" data-toggle="tab"> 
                                                <img width="35" height="35" src="{{asset('assets/img/mtn.png') }}" alt="mtn"/>
                                                MTN Money</a></li>
                                        <li role="presentation"><a href="#moov" aria-controls="moov" role="tab" data-toggle="tab"> 
                                                <img width="35" height="35" src="{{asset('assets/img/moov.png') }}" alt="moov"/>
                                                MOOV Flooz</a></li>
                                        <li role="presentation"><a href="#appel" aria-controls="appel" role="tab" data-toggle="tab">
                                                <img width="35" height="35" src="{{asset('assets/img/phone.png') }}" alt="appel"/>
                                                Par appel téléphonique</a></li>
                                    </ul>

                                    <!-- Tab panes -->
                                    <div class="tab-content">
                                        <div role="tabpanel" class="tab-pane fade in active" id="orange"> 
                                            <div class="p20">

                                                <div class="row">

                                                    <div class="col-sm-12">  
                                                    <p>Paiement avec orange money. </p>
