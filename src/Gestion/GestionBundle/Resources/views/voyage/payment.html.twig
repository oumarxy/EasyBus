                                                     <b  style="font-size: 15px; color: #ff8c00;">#120*3*code secret# </b>
                                                    </div>
                                                        <div class="col-sm-12">  
                                                        <form class="filter" method="post" action="#">
                                                            <div class="row">
                                                                <div class="col-sm-12 col-md-4">
                                                                    <div class="form-group">
                                                                        <input type="text" placeholder="Téléphone" required class="form-control">
                                                                    </div><!-- /.form-group -->
                                                                </div><!-- /.col-* -->
                                                                <div class="col-sm-12 col-md-4">
                                                                    <div class="form-group">
                                                                        <input type="text" placeholder="Email" required class="form-control">
                                                                    </div><!-- /.form-group -->
                                                                </div><!-- /.col-* -->
                                                                <div class="col-sm-12 col-md-4">
                                                                    <div class="form-group">
                                                                        <input type="text" placeholder="Nom" class="form-control">
                                                                    </div><!-- /.form-group -->
                                                                </div><!-- /.col-* -->

                                                            </div><!-- /.row -->

                                                            <hr>

                                                            <div class="row">
                                                                <div class="col-sm-8">
                                                                    <div class="filter-actions">


                                                                    </div><!-- /.filter-actions -->
                                                                </div><!-- /.col-* -->

                                                                <div class="col-sm-4">
                                                                    <button type="submit" class="btn btn-primary">ACHETER VOTRE TICKET </button>
                                                                </div><!-- /.col-* -->
                                                            </div><!-- /.row -->
                                                        </form>


                                                    </div><!-- /.col -->
                                                </div><!-- /.row -->

                                            </div>
                                        </div>
                                        <div role="tabpanel" class="tab-pane fade" id="mtn">
