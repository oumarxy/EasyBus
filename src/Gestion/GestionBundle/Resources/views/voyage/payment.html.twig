                                                                </div><!-- /.col-* -->
                                                                <div class="col-sm-12 col-md-4">
                                                                    <div class="form-group">
                                                                        <input type="text" placeholder="Email" class="form-control">
                                                                    </div><!-- /.form-group -->
                                                                </div><!-- /.col-* -->
                                                                <div class="col-sm-12 col-md-4">
                                                                    <div class="form-group">
                                                                        <input type="text" placeholder="Nom" class="form-control">
                                                                    </div><!-- /.form-group -->
